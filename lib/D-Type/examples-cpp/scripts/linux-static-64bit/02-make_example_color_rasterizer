##!/bin/csh

echo -------------------------------------------------------------------------------
echo Build example_color_rasterizer
echo -------------------------------------------------------------------------------

c++ -c -std=c++0x -nostdlib -fno-exceptions -fno-rtti -Wfloat-equal -Wshadow -Wall -Wextra -Wstrict-aliasing=2 -Wcast-align -Wcast-qual -Wdouble-promotion -Wformat=2 -ffunction-sections -fdata-sections -fno-common -pedantic -I ../../../includes/core-cpp/ -I ../../../includes/utils/ -O3 ../../../examples-cpp/example_color_rasterizer/main.cpp
c++ -Wl,--gc-sections -o example_color_rasterizer main.o ../../../engine/libs/x64-linux_64-static/gcc/dtypestd.o ../../../other/libs/x64-linux_64-static/gcc/dtwindow.a -fno-exceptions -fno-rtti -Wfloat-equal -Wshadow -Wall -Wextra -Wstrict-aliasing=2 -Wcast-align -Wcast-qual -pedantic -Isource -L/usr/X11R6/lib -lX11 -lrt -pthread

echo Done.
echo -------------------------------------------------------------------------------
